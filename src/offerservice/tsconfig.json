{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "preserveConstEnums": true,
        "outDir": "dist",
        "watch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./test"
    ]
}